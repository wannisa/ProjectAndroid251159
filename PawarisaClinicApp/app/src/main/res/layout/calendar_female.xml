<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">

    <Button
        android:text="คำนวณวันตกไข่"
        android:textStyle="bold"
        android:background="#FF3E96"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:textSize="20dp"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ดูปฏิทินวันตกไข่"
        android:textStyle="bold"
        android:background="#FF3E96"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="คำนวณวันตกไข่"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="กรุณาเลือกวันเริ่มต้น"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/calendaricon"
        android:id="@+id/imageView11"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_marginLeft="50dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="กรุณาเลือกวันสิ้นสุด"
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editText"
        android:layout_toEndOf="@+id/imageView11"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginTop="41dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/textView5"
        android:layout_toEndOf="@+id/imageView12" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/calendaricon"
        android:id="@+id/imageView12"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />
</RelativeLayout>